datasource db {
  provider = "postgresql"
}
 
generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum ColorStyle {
  LIGHT
  DARK
  COLORFUL
  MINIMALIST
  PASTEL
  MONOCHROME
}

enum PrimaryColor {
  WHITE
  BLACK
  GRAY
  RED
  BLUE
  GREEN
  YELLOW
  ORANGE
  PURPLE
  PINK
}

enum Technology {
  NEXTJS
  REACT
  VUE
  ANGULAR
  SVELTE
  LARAVEL
  NODEJS
  WORDPRESS
  WEBFLOW
  SHOPIFY
  STRAPI
  OTHER
}
 
model User {
  id            String          @id @default(cuid())
  name          String
  email         String          @unique
  emailVerified DateTime?
  image         String          @default("https://jrgxq33rwp.ufs.sh/f/BNaNzrQS3KNeOIpQ9sfX6YjFCOQ0PUb84RtzAZJkh3B95pvN")
  phone         String?
  emailContact  String?
  website       String?
  bio           String          @default("Ovaj korisnik još uvijek nije postavio svoju biografiju. Ovdje će se uskoro nalaziti detalji o njegovom radu, postignućima i projektima koje dijeli sa zajednicom. Pratite profil za buduća ažuriranja")
  accounts      Account[]
  sessions      Session[]
  websites      Website[]
  likes         Like[]
  notifications Notification[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]
  role          Role            @default(USER)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

enum WebsiteStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Category {
  TURIZAM
  GASTRONOMIJA 
  NEKRETNINE
  ZDRAVLJE
  BIZNIS
  AUTOMOTO
  OSTALO
}

enum Style {
  MINIMALISTICKI
  MODERAN
  RETRO
  ELEGANTAN
  KORPORATIVNI
  KREATIVAN
  OSTALO
}

model Like {
  id          String        @id @default(cuid())
  userId      String
  websiteId   String 
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  website     Website       @relation(fields: [websiteId], references: [id], onDelete: Cascade)
  createdAt   DateTime      @default(now())
  
  @@unique([userId, websiteId])
}

enum NotificationType {
  POSITIVE
  NEGATIVE
  NEUTRAL
  LIKE
}

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType @default(NEUTRAL)
  message   String
  userId    String  
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime         @default(now())
}

model Website {
  id        String        @id @default(cuid())
  url       String        @unique
  name      String        @unique
  userId    String 
  imageUrl  String
  category  Category      @default(OSTALO)
  style     Style         @default(OSTALO)
  colorStyle ColorStyle     @default(LIGHT)
  primaryColor PrimaryColor @default(WHITE)
  technology Technology   @default(WORDPRESS)
  views     Int           @default(0)
  likedBy   Like[]
  award     String?     
  status    WebsiteStatus @default(PENDING)
  rejectionReason String?
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime      @default(now())
}

 
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}
 
// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([userId, credentialID])
}